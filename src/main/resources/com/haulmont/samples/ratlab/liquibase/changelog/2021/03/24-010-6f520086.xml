<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ratlab">
        <createTable tableName="RATLAB_EMPLOYEE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RATLAB_EMPLOYEE"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATE_TS" type="DATETIME"/>
            <column name="CREATED_BY" type="VARCHAR(50)"/>
            <column name="UPDATE_TS" type="DATETIME"/>
            <column name="UPDATED_BY" type="VARCHAR(50)"/>
            <column name="DELETE_TS" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(50)"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="POSITION_" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPERIENCE" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SINCE" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="SUPERVISOR_ID" type="UUID"/>
            <column name="HOME_ADDRESS_COUNTRY" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_TOWN" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_FIELD1" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_LATITUDE" type="DOUBLE"/>
            <column name="HOME_ADDRESS_LONGITUDE" type="DOUBLE"/>
            <column name="HOME_ADDRESS_FIELD2" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_FIELD3" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_FIELD4" type="VARCHAR(255)"/>
            <column name="HOME_ADDRESS_FIELD5" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="ratlab">
        <addForeignKeyConstraint baseColumnNames="SUPERVISOR_ID" baseTableName="RATLAB_EMPLOYEE"
                                 constraintName="FK_RATLABEMPLOYE_ON_SUPERVISOR" referencedColumnNames="ID"
                                 referencedTableName="RATLAB_EMPLOYEE"/>
    </changeSet>
</databaseChangeLog>